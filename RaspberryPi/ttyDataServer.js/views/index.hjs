<!DOCTYPE html>
<html lang="en">
<head>
    <title>Hydrouino Dream Balcony</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="//maxcdn.bootstrapcdn.com/bootswatch/3.2.0/cosmo/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1>Hydrouino Dream Balcony</h1>
        </div>
        <hr/>
    </div>

    <div class="row" id="eventLog">
        <table class="table table-striped">
            <tr>
                <td width='30%'><em>Light level</em></td>
                <td class="col-md-12" id="lightLevel">waiting...</td>
            </tr>
            <tr>
                <td><em>Water level</em></td>
                <td class="col-md-12" id="waterLevel">waiting...</td>
            </tr>
            <tr>
                <td><em>Water Temp</em></td>
                <td class="col-md-12" id="waterTemp">waiting...</td>
            </tr>
            <tr>
                <td><em>Air Temp (case)</em></td>
                <td class="col-md-12" id="airTemp">waiting...</td>
            </tr>
            <tr>
                <td><em>Air Pressure</em></td>
                <td class="col-md-12" id="airPressure">waiting...</td>
            </tr>
            <tr>
                <td><em>Pump Current Draw</em></td>
                <td class="col-md-12" id="pumpCurrent">waiting...</td>
            </tr>
            <tr>
                <td><em>Uptime</em></td>
                <td class="col-md-12" id="heartBeat">waiting...</td>
            </tr>
        </table>
    </div>

    <div class="row">
        <img src="http://hydro.weekendhack.it/hydropic.jpg" class="img-responsive"
             alt="Hydro balcony. Image refreshed every 10min.">
    </div>
    <div class="row" id="raweventLog">
    </div>
</div>
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.3.5/socket.io.min.js"></script>
<script>
    var hostURL = 'ws://hydro.homelinux.net';
    //    var socket = io.connect(hostURL);
    console.log('Connecting socket.io');
    var socket = io.connect();
    socket.on('data', function (data) {
        // console.log(data);
        //$('#raweventLog').append('<div>'+data.data[0]+' : '+data.data[1]+'</div>');
        $('#' + data.data[0]).html(data.data[1] + '&nbsp;' + data.unit);
    });
</script>
</body>
</html>
